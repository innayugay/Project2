<div class="est-page container-fluid">
  {{#each theList}}
    <h2>{{this.name}}</h2>
    <h4>{{this.type}}</h4>
    <h3>{{this.description}}</h3>
    <h3>{{this.address}}</h3>
    <button class="btn btn-primary"><a href="establishments/{{this._id}}"> See details </a></button>
    {{!-- <button class="btn btn-primary"><a href="establishments/edit/{{this._id}}">Edit</a></button> --}}
    <form action="establishments/delete/{{this._id}}" method="POST">
        <button class="btn btn-danger">Delete</button>
    </form>

  {{/each}}


  <button><a href="/establishments/new">Add a new establishment</a></button>
</div>
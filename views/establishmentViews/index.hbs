  <div class="event-index container-fluid">
  <div class="row">
    <div class="col-md-1"></div>
    <button class="btn btn-dark add-new-event"><a href="/establishments/new">Add a new establishment</a></button>
  </div>
  <div class="row"></div>

    {{#each theList}}
    <div class="each-event col-md-5">
    
      {{#if this.imgPath}}
      <div class="row">
        <div class="col-md-1"></div>
        <img src="{{this.imgPath}}" alt="" class="each-event-image col-md-10">
      </div>
      {{/if}}
      <div class="row">
        <div class="col-md-2"></div>
        <h2 class="col-md-8">{{this.name}}</h2>
      </div>
      <div class="row">
        <div class="col-md-4 col-sm-1"></div>
        <div class="col-md-2"><img src="/images/star.png" alt="" class="rating-star-icon">{{this.avgRating}}</div>
        <h4 class="col-md-5">{{this.type}}</h4>
      </div>
      <div class="row">
        <div class="col-md-4"></div>
        <button class="btn btn-outline-light col-md-4"><a href="/establishments/{{this._id}}"> See details </a></button>
      </div>
    </div>
    {{/each}}


</div>








    
 

<link rel ="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.1.3/css/bootstrap.min.css">
<link rel="stylesheet" href="style.css">
<div class="nav-bar-dark">
    <ul>
      <li><a href="/private">Home</a></li>
      <li><a href="/profile/{{theUser._id}}">My profile</a></li>
      <li><a href="/logout">Log Out</a></li>
    </ul>

</div>

<div class="show-est container-fluid" style="background : url({{est.imgPath}}); background-size:cover">
  <div class="show-est-content">
        <h1 class="capitalize bold creamy-text">{{est.name}}</h1>
        <h4 class="capitalize-sm creamy-text">{{est.type}}</h4>
        {{!-- <h5> Where? <span class="capitalize-sm">{{est.address}}</span></h5> --}}
        <div class="row">
            <div class="col-md-3"></div>
            {{#if est.avgRating}}
            <h4 class="col-md-3 creamy-text"> <img src="/images/star.png" alt="" class="rating-star-icon">
              Rating: {{est.avgRating}}</h4>
            {{/if}}
            <div class="col-md-2"></div>
            <form action="/establishments/favourite/{{est._id}}" method="POST">
              <button class="btn btn-warning">Add to favourites</button>
            </form>
            <div class="col-md-1"></div>
            {{#if message}}
            <div class="col-md-1"></div>
              <div class="error-message">{{ message }}</div>
            {{/if}}
        </div>
        <h4><span class=" creamy-text">{{est.description}}</span></h4>

        {{!-- <div><img src="{{est.imgPath}}" alt="" class="event-image"></div> --}}
        <div class="row">
          <div class="col-md-4"></div>
          <button class="btn btn-outline-warning" id=""><a href="edit/{{est._id}}">Edit</a></button>
          <div class="col-md-3"></div>
          <form action="/establishments/delete/{{est._id}}">
            <button class="btn btn-outline-danger" id="">Delete</button>
          </form>
        </div>

        <div class="row rating-text">
          <div class="col-md-1"></div>
          <h5><span class="creamy-text">Have you been here? Tell us what you think!</span> </h5>
          <div class="col-md-1"></div>
          <h5><a href="rating/{{est._id}} ">Give this place a rating</a></h5>

        </div>
        {{!-- <div id="map"></div> --}}

        

  </div>


</div>
<link rel ="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.1.3/css/bootstrap.min.css">
<link rel="stylesheet" href="style.css">
<div class="nav-bar">
    <ul>
      <li><a href="/private">Home</a></li>
      <li><a href="/profile/{{theUser._id}}">My profile</a></li>
      <li><a href="/logout">Log Out</a></li>
    </ul>

</div>

<div class="show-est container-fluid">

  <h2>{{est.name}}</h2>
  <h3>{{est.type}}</h3>
  {{#if est.avgRating}}
  <h3> <img src="/images/star.png" alt="" class="rating-star-icon">
    Rating: {{est.avgRating}}</h3>
  {{/if}}
  <h5>{{est.address}}</h5>
  <p>{{est.description}}</p>



  <form action="favourite/{{est._id}}" method="POST">
    <button class="btn btn-warning">Add to favourites</button>
  </form>
  
  {{#if message}}
    <div class="error-message">{{ message }}</div>
  {{/if}}


  <div><img src="{{est.imgPath}}" alt=""></div>
  <button class="btn btn-primary"><a href="edit/{{est._id}}">Edit</a></button>

  <h4>Have you been here? Tell us what you think</h4>
  <h4><a href="rating/{{est._id}}">Give this place a rating</a></h4>


</div>
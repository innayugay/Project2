<link rel ="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.1.3/css/bootstrap.min.css">
<link rel="stylesheet" href="/stylesheets/style.css" />
  <div class="nav-bar-dark">
    <ul>
      <li><a href="/private">Home</a></li>
      <li><a href="/profile/{{theUser._id}}">My profile</a></li>
      <li><a href="/logout">Log Out</a></li>
    </ul>
  </div>

    
<div class="event-index container-fluid">
  <div class="row">
    <div class="col-md-1"></div>
    <a href="/events/new" class="btn btn-dark add-new-event">Add a new event</a>
  </div>
  <div class="row"></div>

    {{#each theList}}
    <div class="each-event col-md-5">
    
      {{#if this.imgPath}}
      <div class="row">
        <div class="col-md-1"></div>
        <img src="{{this.imgPath}}" alt="" class="each-event-image col-md-10">
      </div>
      {{/if}}
      <div class="row">
        <div class="col-md-2"></div>
        <h2 class="col-md-8">{{this.name}}</h2>
      </div>
      <div class="row">
        <div class="col-md-4 col-sm-1"></div>
        <div class="col-md-2"><img src="/images/user.png" alt="" class="user-icon">{{this.attendees.length}}</div>
        <h4 class="col-md-5">{{this.type}}</h4>
      </div>
      <div class="row">
        <div class="col-md-4"></div>
        <a href="/events/{{this._id}}" class="btn btn-outline-light col-md-4"> See details </a>
      </div>
    </div>
    {{/each}}


</div>

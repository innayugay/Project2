  <body>
    
<div class="event-index container-fluid">
  <div class="row">
    <div class="col-md-1"></div>
    <button class="btn btn-dark add-new-event"><a href="/events/new">Add a new event</a></button>
  </div>
  <div class="row blah"></div>
    {{#each theList}}
    <div class="each-event col-md-5">
    
      {{#if this.imgPath}}
      <div class="row">
        <div class="col-md-1"></div>
        <img src="{{this.imgPath}}" alt="" class="each-event-image col-md-10">
      </div>
      {{/if}}
      <div class="row">
        <div class="col-md-2"></div>
        <h2 class="col-md-8">{{this.name}}</h2>
      </div>
      <div class="row">
        <div class="col-md-4"></div>
        <div class="col-md-2"><img src="/images/user.png" alt="" class="user-icon">{{this.attendees.length}}</div>
        <h4 class="">{{this.type}}</h4>
      </div>
      <div class="row">
        <div class="col-md-4"></div>
        <button class="btn btn-outline-light col-md-4"><a href="/events/{{this._id}}"> See details </a></button>
      </div>
    </div>
    {{/each}}


</div>
  </body>
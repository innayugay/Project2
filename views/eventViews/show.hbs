<link rel ="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.1.3/css/bootstrap.min.css">
<link rel="stylesheet" href="style.css">
  <div class="nav-bar">
    <ul>
      <li><a href="/private">Home</a></li>
      <li><a href="/profile/{{theUser._id}}">My profile</a></li>
      <li><a href="/logout">Log Out</a></li>
    </ul>

  </div>

<div class="show-event container-fluid">
  <h1><span class="capitalize bold">{{event.name}}</span></h1>
  <h3 class="capitalize-sm">{{event.type}}</h3>
  <h5>{{event.address}}</h5>
  <h5>When? <span class="bold">{{event.date}}</span></h5>

  <div> 
    <img src="/images/user.png" alt="" class="user-icon">
    <a href="/events/{{event._id}}/attendees">{{event.attendees.length}} people are interested in this event</a> 
    <form action="/events/interested/{{event._id}}" method="POST">
        <button class="btn btn-warning">I am interested in this event</button>
    </form>
     {{#if message}}
        <div class="error-message">{{ message }}</div>
      {{/if}}

  </div>
 
  <h3>{{event.description}}</h3>

  <div><img src="{{event.imgPath}}" alt="" class="event-image"></div>

  <div class="row">
      <div class="col-md-1"></div>
      <a href="edit/{{event._id}}" class="btn btn-outline-warning col-md-2" id="orange-button">Edit this event</a>
      <div class="col-md-1"></div>
      <form action="delete/{{event._id}}" method="POST">
          <button class="btn btn-outline-danger" id="red-button">Delete</button>
      </form>

  </div>

</div>
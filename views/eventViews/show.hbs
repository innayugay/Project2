<link rel ="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.1.3/css/bootstrap.min.css">
<link rel="stylesheet" href="style.css">
  <div class="nav-bar">
    <ul>
      <li><a href="/private">Home</a></li>
      <li><a href="/profile/{{theUser._id}}">My profile</a></li>
      <li><a href="/logout">Log Out</a></li>
    </ul>

  </div>

<div class="show-est container-fluid">
  <h2>{{event.name}}</h2>
  <h3>{{event.type}}</h3>
  <h5>{{event.address}}</h5>
  <h5>When: {{event.date}}</h5>

  <h1> <a href="{{event._id}}/attendees">{{event.attendees.length}} people are interested in this event</a> </h1>
 


  <p>{{event.description}}</p>

  <div class="event-image"><img src="{{event.imgPath}}" alt=""></div>

  <form action="interested/{{event._id}}" method="POST">
    <button>I am interested in this event</button>
  </form>

   {{#if message}}
    <div class="error-message">{{ message }}</div>
  {{/if}}

  <button class="btn btn-primary"><a href="edit/{{event._id}}">Edit</a></button>


</div>
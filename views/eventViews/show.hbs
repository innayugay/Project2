<link rel ="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.1.3/css/bootstrap.min.css">
<link rel="stylesheet" href="style.css">
  <div class="nav-bar">
    <ul>
      <li><a href="/private">Home</a></li>
      <li><a href="/profile/{{theUser._id}}">My profile</a></li>
      <li><a href="/logout">Log Out</a></li>
    </ul>

  </div>

<div class="show-event container-fluid" style=" background: url({{event.imgPath}}); background-size:cover">
  <div class="show-event-content">

        <h1><span class="capitalize creamy-text">{{event.name}}</span></h1>
        <h4 class="capitalize-sm creamy-text">{{event.type}}</h4>
        <h4>{{event.address}}</h4>
        <h4 class="bold creamy-text"> When? {{event.date}}</span></h4>

        <div> 
          <img src="/images/user.png" alt="" class="user-icon">
          <a href="/events/{{event._id}}/attendees">{{event.attendees.length}} people are interested in this event</a> 
          <form action="/events/interested/{{event._id}}" method="POST">
              <button class="btn btn-warning">I am interested in this event</button>
          </form>
          {{#if message}}
              <div class="error-message">{{ message }}</div>
            {{/if}}

        </div>
      
        <p class="creamy-text">{{event.description}}</p>

        {{!-- <div><img src="{{event.imgPath}}" alt="" class="event-image"></div> --}}

        <div class="row">
            <div class="col-md-3"></div>
            <a href="edit/{{event._id}}" class="btn btn-outline-warning col-md-2" id="orange-button">Edit this event</a>
            <div class="col-md-2"></div>
            <form action="delete/{{event._id}}" method="POST">
                <button class="btn btn-outline-danger" id="red-button">Delete</button>
            </form>

        </div>
  </div>

</div>